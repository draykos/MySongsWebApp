@model MySongsWebApp.Models.LoginViewModel
@{
    ViewData["Title"] = "User Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="users" asp-action="login">    
            <div asp-validation-summary="All" style="color: red;"></div>
            <div class="form-group">
                <label asp-for="Email"></label><br />
                <input asp-for="Email" />
                <span asp-validation-for="Email" style="color: red;"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Password"></label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password" style="color: red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe"></label><br />
                <input asp-for="RememberMe" />
            </div>
            <div asp-validation-summary="All" style="color: red;"></div>
            <input class="btn btn-primary" type="submit" value="Login" />
        </form> 
    </div>
</div>
