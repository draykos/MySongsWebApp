@model RoleViewModel
@{
    ViewData["Title"] = "Create";
    var roles = ViewData["Roles"] as List<IdentityRole>;
}

<h1>Roles</h1>


<p>
    <form method="post" asp-controller="Roles" asp-action="Create">  
        <div asp-validation-summary="All" style="color: red;"></div>
        <div class="form-group">
            <label asp-for="RoleName"></label><br />
            <input asp-for="RoleName" />
            <span asp-validation-for="RoleName" style="color: red;"></span>
        </div>
        <input class="btn btn-primary" type="submit" value="Create" />
    </form> 
</p>
@if(roles != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in roles)
            {
                <tr>
                    <td>
                        @role.Name
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@role.Name">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


}
